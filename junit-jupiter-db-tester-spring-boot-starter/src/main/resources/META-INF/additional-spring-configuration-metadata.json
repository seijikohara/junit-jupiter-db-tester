      "values": [
        {
          "value": true,
          "description": "Enable DB Tester integration (default)."
        },
        {
          "value": false,
          "description": "Disable DB Tester integration."
        }
      ]
    },
    {
      "name": "dbtester.auto-register-data-sources",
      "values": [
        {
          "value": true,
          "description": "Automatically register all DataSource beans (default)."
